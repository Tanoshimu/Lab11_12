def sum_of_digits(n):
    # Преобразуем отрицательные числа в положительные
    n = abs(n)

    # Базовый случай: если число меньше 10, возвращаем его
    if n < 10:
        return n
    
    # Рекурсивный случай: последняя цифра + сумма остальных
    return n % 10 + sum_of_digits(n // 10)


# Тестирование
num = 12438
print(f"Сумма цифр числа {num} = {sum_of_digits(num)}")
