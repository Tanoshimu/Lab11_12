class Node:
    def __init__(self, value):
        self.value = value
        self.left = None
        self.right = None


def count_leaves(root):
    # Пустое дерево → листьев нет
    if root is None:
        return 0
    
    # Если нет детей → это лист
    if root.left is None and root.right is None:
        return 1
    
    # Иначе считаем листья в левом и правом поддереве
    return count_leaves(root.left) + count_leaves(root.right)


root = Node("A")
root.left = Node("B")
root.right = Node("C")
root.left.left = Node("D")
root.left.right = Node("E")

# --- Тестирование ---
print("Количество листьев в дереве:", count_leaves(root))   # Ожидается 3 (D, E, C)
