def sum_array(arr):
    # Базовый случай: если массив пустой, сумма равна 0
    if len(arr) == 0:
        return 0
    
    # Рекурсивный случай:
    # первый элемент + сумма оставшихся
    return arr[0] + sum_array(arr[1:])


# Тестирование
numbers = [1, 2, 3, 4, 5]
print(f"Сумма элементов массива: {sum_array(numbers)}")
