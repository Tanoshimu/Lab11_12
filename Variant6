def count_vowels(s):
    # Определяем множество гласных (русские и английские)
    vowels = "аеёиоуыэюяaeiou"
    
    # Базовый случай: пустая строка
    if s == "":
        return 0
    
    # Проверяем первый символ и рекурсивно обрабатываем остаток строки
    first = 1 if s[0].lower() in vowels else 0
    return first + count_vowels(s[1:])


# Тестирование
text = "Привет, мир!"
print(f"Количество гласных в строке: {count_vowels(text)}")
